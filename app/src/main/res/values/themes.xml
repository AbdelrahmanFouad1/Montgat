<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="material" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/backgroundLight</item>
        <item name="colorPrimaryVariant">@color/yellow2</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/yellow2</item>
        <item name="android:windowBackground">@color/backgroundLight</item>

        <!--        notification bar for back ground color && text color-->
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--    <item name="android:windowTranslucentStatus">true</item>-->

        <!--        Navigation Bar Color-->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetTheme</item>
    </style>


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/yellow</item>
        <item name="android:textColorPrimary">@color/dark_gray</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="BottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>


    <style name="RippleStyleGray">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/gray</item>
        <item name="mrl_rippleAlpha">0.1</item>
        <item name="mrl_rippleRoundedCorners">@dimen/_20sdp</item>
    </style>


    <style name="RippleStyleGrayNormal">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/gray</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>


    <style name="collapsingToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/backgroundLight</item>

        <item name="colorPrimaryVariant">@color/yellow2</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/yellow2</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>


        <!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
        <!-- Status bar color. -->
    </style>



    <!-- =============================================================== -->
    <!-- Material-Dark styles -->
    <!-- =============================================================== -->

    <style name="BackgroundColorApp">
        <item name="android:background">@color/backgroundLight</item>
    </style>

    <style name="BackgroundColor2">
        <item name="android:background">@color/white_gray</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="textColor2">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="big_text">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="BackgroundColorItem">
        <item name="android:background">@color/white</item>
    </style>

    <style name="imageColor">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="imageColorTint2">
        <item name="android:tint">@color/backgroundLight</item>
    </style>

    <style name="imageColorTint3">
        <item name="android:tint">@color/dark_gray</item>
    </style>

    <style name="imageColorTint4">
        <item name="android:tint">@color/gray</item>
    </style>

    <style name="updateProfileCircle">
        <item name="android:src">@color/backgroundLight</item>
    </style>

    <style name="search">
        <item name="android:background">@drawable/search_view</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:drawableTint">@color/gray</item>
    </style>

    <style name="line">
        <item name="android:background"> @android:color/darker_gray</item>
        <item name="android:drawableTint"> @color/gray</item>
        <item name="android:textColor"> @color/gray</item>
    </style>

    <style name="card">
        <item name="android:tint">@color/gray</item>
        <item name="android:drawableTint"> @color/gray</item>
        <item name="android:textColor"> @color/gray</item>
    </style>

    <style name="circle">
        <item name="android:src">@drawable/ovel</item>
    </style>

    <style name="line2">
        <item name="android:background">@color/black</item>
    </style>

    <style name="sideMenu">
        <item name="android:backgroundTint">@color/backgroundLight</item>
        <item name="itemTextColor">@color/gray</item>
        <item name="itemIconTint">@color/gray</item>
    </style>

    <style name="cartTheme">
        <item name="android:background">@color/white_gray</item>
    </style>

    <!-- =============================================================== -->
    <!-- Material-Dark styles -->
    <!-- =============================================================== -->


</resources>

