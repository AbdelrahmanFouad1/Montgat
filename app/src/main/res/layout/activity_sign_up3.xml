<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/_25sdp"
    android:paddingTop="@dimen/_25sdp"
    android:paddingEnd="@dimen/_25sdp"
    android:paddingBottom="@dimen/_25sdp"
    tools:context=".ui.login.Register.SignUpActivity3"
    style="@style/BackgroundColorApp"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_40sdp">

            <ImageView
                android:id="@+id/oval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo"
                style="@style/circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:fontFamily="@font/big_shoulders_bold"
                android:text="@string/register3_text1"
                style="@style/big_text"
                android:textSize="@dimen/_40sdp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back_image_signUp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:contentDescription="@string/todo"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_back"
                android:transitionName="transition_back_arrow_btn"
                style="@style/imageColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:fontFamily="@font/bunge"
                android:text="@string/register3_text2"
                android:textAllCaps="true"
                android:textSize="@dimen/_30ssp"
                android:transitionName="transition_title_text"
                style="@style/big_text"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/register3_text3"
                style="@style/big_text"
                android:textSize="@dimen/_16ssp" />

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center"
                android:background="@color/yellow"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/userPhoto_iv_signUp3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_user_images1"
                    style="@style/imageColor"/>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                style="@style/line2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/register3_text4"
                style="@style/big_text"
                android:textSize="@dimen/_16ssp" />

            <com.hbb20.CountryCodePicker
                android:id="@+id/codeCountryPiker_signUp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/country_code_picker_back"
                app:ccp_autoDetectCountry="true"
                app:ccp_showFlag="true"
                app:ccp_showFullName="true"
                app:ccp_showNameCode="true"
                android:backgroundTint="@color/gray"
                app:ccp_contentColor="@color/gray"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone_TextInputLayout_signUp33"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/register3_text5"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_phone">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/next_btn_signUp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/btn"
                android:text="@string/register3_text6"
                android:textColor="@color/white"
                android:transitionName="transition_back_next_btn" />


        </LinearLayout>

    </RelativeLayout>

</ScrollView>