<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/_5sdp">

    <ImageView
        android:id="@+id/shape_circle_iv_item"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:src="@drawable/circle_bac" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/color_civ_listItem"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignStart="@+id/shape_circle_iv_item"
        android:layout_alignEnd="@+id/shape_circle_iv_item"
        android:layout_alignBottom="@+id/shape_circle_iv_item"
        android:layout_alignTop="@+id/shape_circle_iv_item"
        android:padding="@dimen/_5sdp"
        android:src="@color/black" />

</RelativeLayout>