<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/_5sdp"
    android:id="@+id/trending_ll_item">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_200sdp"
        >

        <ImageView
            android:id="@+id/image_iv_trendingHome_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/woman"
            style="@style/BackgroundColorItem"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/label_tv_trendingHome_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lgqr mayra women party wear shirt"
        android:textSize="@dimen/_14ssp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price_tv_trendingHome_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="450"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_14ssp"
            style="@style/textColor2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" EGP"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_14ssp"
            style="@style/textColor2"/>

    </LinearLayout>




</LinearLayout>