<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_48sdp"
    android:orientation="vertical"
    android:background="@drawable/category_list"
    android:layout_margin="@dimen/_2sdp"
    android:id="@+id/category_rl_categoryItem">


    <TextView
        android:id="@+id/name_tv_categoryItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/rectangle_iv_categoryItem"
        android:gravity="center"
        android:text="Shirt"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/rectangle_iv_categoryItem"
        android:layout_width="@dimen/_70sdp"
        android:layout_marginRight="-50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_arrow_left3"
        android:visibility="visible"
        style="@style/imageColorTint2"/>



</RelativeLayout>